---
import TerminalWindow from "@components/TerminalWindow.tsx";
import DoubleStackButton from "@components/DoubleStackButton.tsx";
import PixelatedHello from "@components/PixelatedHello.tsx";
import SocialMediaButton from "@components/SocialMediaButton.astro";
import LinkedinIcon from "@components/icons/LinkedinIcon.astro";
import GeneralLayout from "../layouts/GeneralLayout.astro";
import socials from "@data/socials.ts";
---

<GeneralLayout path={""}>
    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
        <!-- Profile Terminal Window -->
        <TerminalWindow title="#!/bin/bash" email="bomsiwor@gmail.com">
            <div class="flex h-full flex-col justify-between">
                <div>
                    <div class="mb-6 h-32 w-32 bg-gray-200"></div>

                    <h2 class="mb-2 text-2xl font-bold text-white lg:text-4xl">
                        sono <span class="text-catpuccin-sky">Boma</span
                        >narakasura!
                    </h2>
                    <p
                        class="mb-6 text-sm text-catpuccin-sapphire md:text-base"
                    >
                        Software engineer
                    </p>

                    <p
                        class="mb-6 text-xs leading-relaxed text-catpuccin-sapphire md:text-base"
                    >
                        High-Impact Code. 2 Years of Crafting Digital Solutions.
                        🚀 <br /> I build software that lasts. AI powered app ? Just
                        call me! <br /> Let's create something unforgettable
                        together!
                    </p>

                    <div>
                        <DoubleStackButton client:load icon="📑" url="about">
                            Man page
                        </DoubleStackButton>
                    </div>
                </div>

                <div
                    class="mt-10 flex w-full flex-col lg:flex-row lg:items-end lg:justify-between"
                >
                    <div>
                        <p class="mb-4">More about me</p>

                        <div
                            class="flex flex-col gap-4 lg:w-auto lg:flex-row lg:gap-[30px]"
                        >
                            <DoubleStackButton
                                client:load
                                icon="🎨"
                                url="/projects"
                            >
                                projects
                            </DoubleStackButton>

                            <DoubleStackButton
                                client:load
                                icon="🖍️"
                                url="/blogs"
                            >
                                blogs
                            </DoubleStackButton>

                            <!-- <DoubleStackButton client:load icon="🌈"> -->
                            <!--     sandbox -->
                            <!-- </DoubleStackButton> -->
                        </div>
                    </div>

                    <img
                        src="/earth.png"
                        alt="Earth"
                        class="hidden h-20 w-20 cursor-none lg:block"
                    />
                </div>
            </div>
        </TerminalWindow>

        <!-- Hello World Terminal Window -->
        <div class="hidden lg:block">
            <TerminalWindow title="#!/bin/bash">
                <PixelatedHello client:load />
            </TerminalWindow>
        </div>
    </div>

    <div
        class="mt-8 grid grid-cols-2 gap-4 border border-catpuccin-sapphire p-4 lg:flex lg:flex-row lg:items-center"
    >
        <p class="col-span-2 text-center text-xl">Reach me on</p>

        {
            socials.map((social) => {
                return (
                    <SocialMediaButton
                        icon={social.icon}
                        url={social.url}
                        platform={social.platform}
                    />
                );
            })
        }
    </div>
</GeneralLayout>
