---
interface Props {
    path?: string | string[];
}

// Compute paths
const { path = "" } = Astro.props;
const finalPath = Array.isArray(path)
    ? path.join("/")
    : path !== ""
      ? `/${path.startsWith("/") ? path.substring(1) : path}`
      : "";
---

<header>
    <h1 class="main-title">
        <a href="/" class="hover:text-catpuccin-sky" tabindex="0"
            >/dev/bomsiwor</a
        >
        <span class="main-title-additional-path">{finalPath}</span>
    </h1>
</header>
